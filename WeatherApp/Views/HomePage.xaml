<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.HomePage"
             xmlns:vm="clr-namespace:WeatherApp.ViewModels"
             xmlns:model="clr-namespace:WeatherApp.Models"
             x:DataType="vm:HomeViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#1a73e8"
             >

    <Grid RowDefinitions="Auto,*">
        <!-- Search bar could be added here in Row 0 -->

        <HorizontalStackLayout Grid.Row="0"  Spacing="70" Margin="10" >
            
        <Label Text="{Binding Title}"
               FontAttributes="Bold"
               TextColor="AliceBlue"
               
               FontSize="30"/>

            <ImageButton Source="search.png"
                          WidthRequest="20"
                          HeightRequest="20"
                          Command="{Binding SearchPlaceCommand}" />



        </HorizontalStackLayout>

        <ScrollView Grid.Row="1">

            
            <CollectionView ItemsSource="{Binding WeatherDataList}"
                          Margin="16,8">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:WeatherData">
                        <Frame Margin="0,8"
                               Padding="20"
                               BackgroundColor="White"
                               CornerRadius="16"
                               HasShadow="True"
                               BorderColor="Transparent">

                            <Grid ColumnDefinitions="*,Auto" RowSpacing="8">
                                <!-- Weather Info -->
                                <VerticalStackLayout Grid.Column="0" Spacing="8">
                                    <Label Text="{Binding name}"
                                           TextColor="#202124"
                                           FontSize="24"
                                           FontAttributes="Bold"/>

                                    <Label Text="{Binding weather[0].description}"
                                           TextColor="#5f6368"
                                           FontSize="16"
                                           TextTransform="Uppercase"/>

                                    <Label Text="{Binding main.TempCelsius, StringFormat='{0:N0}Â°C'}"
                                           TextColor="#1a73e8"
                                           FontSize="32"
                                           FontAttributes="Bold"/>

                                    <Button Text="View Details"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=GoToDetailCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#1a73e8"
                                            TextColor="White"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            Padding="20,0"
                                            Margin="0,8,0,0"/>
                                </VerticalStackLayout>

                                <!-- Weather Icon -->
                                <Image Grid.Column="1"
                                       Source="{Binding IconUrl}"
                                       WidthRequest="100"
                                       HeightRequest="100"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.RowSpan="2"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          Color="White"/>
    </Grid>
</ContentPage>