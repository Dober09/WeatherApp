<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.HomePage"
            
             Title="Weather">
    <VerticalStackLayout>

        <Border Stroke="Gray"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                WidthRequest="330"
                Padding="10"
                >

            <Border.Shadow>
                <Shadow Brush="Black"
                        Offset="20,20"
                        Radius="40"
                        Opacity=".8"/>
            </Border.Shadow>
            
            <FlexLayout JustifyContent="SpaceBetween" >
                <VerticalStackLayout Spacing="10">
                    
                    <Label Text="Mokopane"  FontAttributes="Bold" FontSize="19"/>
                    <Label Text="Rainy"  />
                    <Label Text="18" FontSize="20"/>

                </VerticalStackLayout>
                <Image Source="rain.png"  WidthRequest="100" />
            </FlexLayout>

        </Border>
    </VerticalStackLayout>
</ContentPage>